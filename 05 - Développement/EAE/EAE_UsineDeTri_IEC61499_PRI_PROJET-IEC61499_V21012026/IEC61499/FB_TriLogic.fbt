    <Algorithm Name="ACT_INIT" Comment="Initialization">
      <ST><![CDATA[QO := TRUE;
Sorter_Actif := 0;
Exit_conveyor := FALSE;
Couleur_EnCours := 0;
Couleur_Suivante := 0;
Is_Blocked := FALSE;
Counter_1 := 0;
Counter_2 := 0;
Counter_3 := 0;]]></ST>
    </Algorithm>
    <Algorithm Name="ACT_START" Comment="Premiere piece - activer sorter">
      <ST><![CDATA[(* Premiere piece detectee - activer le sorter *)
Couleur_EnCours := Couleur;
Sorter_Actif := Couleur;
Exit_conveyor := TRUE;
Is_Blocked := FALSE;]]></ST>
    </Algorithm>
    <Algorithm Name="ACT_SAME_COLOR" Comment="Meme couleur - continuer sans bloquer">
      <ST><![CDATA[(* Meme couleur que precedente - pas de blocage *)
(* Le sorter est deja bon, on continue *)
Exit_conveyor := TRUE;]]></ST>
    </Algorithm>
    <Algorithm Name="ACT_DIFF_COLOR" Comment="Couleur differente - bloquer et memoriser">
      <ST><![CDATA[(* Couleur DIFFERENTE - bloquer l'entree et memoriser *)
Couleur_Suivante := Couleur;
Is_Blocked := TRUE;
(* IMPORTANT: garder le sorter actuel jusqu'a ce que la piece sorte *)
Exit_conveyor := TRUE;]]></ST>
    </Algorithm>
    <Algorithm Name="ACT_WAIT" Comment="Attendre sortie piece">
      <ST><![CDATA[(* Attendre que la piece en cours sorte *)
(* Garder le sorter actuel actif *)
Sorter_Actif := Couleur_EnCours;
Exit_conveyor := TRUE;]]></ST>
    </Algorithm>
    <Algorithm Name="ACT_COUNT" Comment="Compter la piece sortie">
      <ST><![CDATA[(* Piece sortie - incrementer compteur *)
IF Couleur_EnCours = 1 THEN
    Counter_1 := Counter_1 + 1;
ELSIF Couleur_EnCours = 2 THEN
    Counter_2 := Counter_2 + 1;
ELSIF Couleur_EnCours = 3 THEN
    Counter_3 := Counter_3 + 1;
END_IF;

(* Preparer pour la suite *)
IF Is_Blocked THEN
    (* On va changer de couleur *)
    Couleur_EnCours := Couleur_Suivante;
ELSE
    (* Pas de piece en attente - on garde la meme couleur active *)
    (* Couleur_EnCours reste inchange *)
   Couleur_EnCours := Couleur;
END_IF;]]></ST>
    </Algorithm>
    <Algorithm Name="ACT_SWITCH" Comment="Changer sorter et debloquer">
      <ST><![CDATA[(* Changer le sorter pour la nouvelle couleur *)
Sorter_Actif := Couleur_EnCours;
Couleur_Suivante := 0;
Is_Blocked := FALSE;
Exit_conveyor := TRUE;]]></ST>
    </Algorithm>
    <Algorithm Name="ACT_AU" Comment="Arret urgence">
      <ST><![CDATA[(* Tout arreter *)
Sorter_Actif := 0;
Exit_conveyor := FALSE;
Couleur_EnCours := 0;
Couleur_Suivante := 0;
Is_Blocked := FALSE;]]></ST>
    </Algorithm>
    <Algorithm Name="ACT_RESET" Comment="Reset complet">
      <ST><![CDATA[(* Reset compteurs et etats *)
QO := TRUE;
Sorter_Actif := 0;
Exit_conveyor := FALSE;
Couleur_EnCours := 0;
Couleur_Suivante := 0;
Is_Blocked := FALSE;
Counter_1 := 0;
Counter_2 := 0;
Counter_3 := 0;]]></ST>
    </Algorithm>
  </BasicFB>
</FBType>