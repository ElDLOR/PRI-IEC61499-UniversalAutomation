        <With Var="Exit_conveyor" />
        <With Var="Counter_1" />
        <With Var="Counter_2" />
        <With Var="Counter_3" />
      </Event>
      <Event Name="BLOCK" Comment="Bloquer entree (couleur differente)" />
      <Event Name="UNBLOCK" Comment="Debloquer entree" />
    </EventOutputs>
    <InputVars>
      <VarDeclaration Name="QI" Type="BOOL" Comment="Input event qualifier" />
      <VarDeclaration Name="Couleur" Type="INT" Comment="1=Bleu, 2=Vert, 3=Gris" />
      <VarDeclaration Name="Changement" Type="BOOL" Comment="TRUE si couleur differente" />
      <VarDeclaration Name="At_exit" Type="BOOL" Comment="Capteur sortie" />
    </InputVars>
    <OutputVars>
      <VarDeclaration Name="QO" Type="BOOL" Comment="Output event qualifier" />
      <VarDeclaration Name="Sorter_Actif" Type="INT" Comment="Sorter actif (1-3)" />
      <VarDeclaration Name="Exit_conveyor" Type="BOOL" Comment="Convoyeur sortie actif" />
      <VarDeclaration Name="Counter_1" Type="INT" Comment="Compteur bleu" />
      <VarDeclaration Name="Counter_2" Type="INT" Comment="Compteur vert" />
      <VarDeclaration Name="Counter_3" Type="INT" Comment="Compteur gris" />
    </OutputVars>
  </InterfaceList>
