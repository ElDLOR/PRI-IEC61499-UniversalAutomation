      <Event Name="RESET" Comment="Reset compteurs" />
      <Event Name="AU" Comment="Arret urgence" />
    </EventInputs>
    <EventOutputs>
      <Event Name="INITO" Comment="Initialization Confirm">
        <With Var="QO" />
